<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tybee.james2017summer.AnimatorActivity">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/activity_animator_start"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:text="Start"/>
        <TextView
            android:id="@+id/activity_animator_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Hello Android"
            android:layout_centerInParent="true"
            android:textSize="23sp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:background="@android:color/holo_blue_light" />
        <Button
            android:id="@+id/activity_animator_stop"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:text="Stop"/>
    </RelativeLayout>

    <GridLayout
        android:id="@+id/activity_animator_bottom"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:columnCount="3"
        android:rowCount="2"
        android:useDefaultMargins="true"
        >

        <Button
            android:id="@+id/animator_trans"
            android:padding="10dp"
            android:layout_width="100dp"
            android:text="trans"
            android:gravity="center"/>
        <Button
            android:id="@+id/animator_scale"
            android:padding="10dp"
            android:layout_width="100dp"
            android:text="scale"
            android:gravity="center"/>
        <Button
            android:id="@+id/animator_color"
            android:padding="10dp"
            android:layout_width="100dp"
            android:text="char"
            android:gravity="center"/>
        <Button
            android:id="@+id/animator_char"
            android:padding="10dp"
            android:layout_width="100dp"
            android:text="char"
            android:gravity="center"/>
        <Button
            android:id="@+id/animator_alpha"
            android:padding="10dp"
            android:layout_width="100dp"
            android:text="alpha"
            android:gravity="center"/>
        <Button
            android:id="@+id/animator_rotation"
            android:padding="10dp"
            android:layout_width="100dp"
            android:text="Rotation"
            android:gravity="center"/>

    </GridLayout>

</RelativeLayout>

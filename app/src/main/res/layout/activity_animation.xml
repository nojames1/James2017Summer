<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tybee.james2017summer.AnimationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_animation_btalpha"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="alpha"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/activity_animation_btscale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="scale"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/activity_animation_btrotate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="rotate"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/activity_animation_bttrans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="trans"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/activity_animation_btset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="set"
            android:textAllCaps="false"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/activity_animation_tv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Animation"
        android:textAlignment="center"
        android:background="@android:color/holo_blue_light"
        android:textSize="30sp"
        android:layout_margin="100dp"/>

</LinearLayout>

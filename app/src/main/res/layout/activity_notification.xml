<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tybee.james2017summer.NotificationActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/activity_notification_small"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="Small Notification"/>

    <Button
        android:id="@+id/activity_notification_big"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="Big Notification"/>
    <Button
        android:id="@+id/activity_notification_pic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="PictureNotification"/>

</LinearLayout>
